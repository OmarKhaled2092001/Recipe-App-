<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- أنماط المؤشر النشط -->
    <style name="App.Custom.Indicator" parent="style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/custom_indicator</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="App.BottomNavigationView.Active" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="App.BottomNavigationView.Inactive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>